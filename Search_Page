            },
            {
                id: 8,
                name: "Meditation & Mindfulness",
                category: "Wellness",
                difficulty: "Beginner",
                location: "Zen Wellness Studio",
                rating: 4.9,
                reviews: 289,
                price: 18,
                image: "üß†",
                description: "Reduce stress and improve mental clarity through guided meditation.",
                instructor: "Monica Patel",
                duration: 30,
                capacity: 20
            }
        ];

        let filteredActivities = [...activities];
        let currentFilters = {
            categories: [],
            difficulties: [],
            minRating: 0,
            search: ""
        };

        function initializeFilters() {
            const categories = [...new Set(activities.map(a => a.category))];
            const difficulties = [...new Set(activities.map(a => a.difficulty))];

            const categoryContainer = document.getElementById('categoryFilters');
            categories.forEach(cat => {
                const chip = document.createElement('div');
                chip.className = 'filter-chip';
                chip.textContent = cat;
                chip.onclick = () => toggleFilter('categories', cat, chip);
                categoryContainer.appendChild(chip);
            });

            const difficultyContainer = document.getElementById('difficultyFilters');
            difficultyFilters = ['Beginner', 'Intermediate', 'Advanced'];
            difficultyFilters.forEach(diff => {
                const chip = document.createElement('div');
                chip.className = 'filter-chip';
                chip.textContent = diff;
                chip.onclick = () => toggleFilter('difficulties', diff, chip);
                difficultyContainer.appendChild(chip);
            });
        }

        function toggleFilter(filterType, value, element) {
            const index = currentFilters[filterType].indexOf(value);
            if (index > -1) {
                currentFilters[filterType].splice(index, 1);
                element.classList.remove('selected');
            } else {
                currentFilters[filterType].push(value);
                element.classList.add('selected');
            }
            applyFilters();
        }

        function filterByRating(rating) {
            currentFilters.minRating = rating;
            applyFilters();
        }

        function performSearch() {
            currentFilters.search = document.getElementById('searchInput').value.toLowerCase();
            applyFilters();
        }

        function performSort() {
            const sortBy = document.getElementById('sortBy').value;
            const sorted = [...filteredActivities];

            switch(sortBy) {
                case 'popular':
                    sorted.sort((a, b) => b.reviews - a.reviews);
                    break;
                case 'rating':
                    sorted.sort((a, b) => b.rating - a.rating);
                    break;
                case 'newest':
                    sorted.sort((a, b) => b.id - a.id);
                    break;
                case 'price-low':
                    sorted.sort((a, b) => a.price - b.price);
                    break;
                case 'price-high':
                    sorted.sort((a, b) => b.price - a.price);
                    break;
            }
            filteredActivities = sorted;
            renderActivities();
        }

        function applyFilters() {
            filteredActivities = activities.filter(activity => {
                const matchesCategory = currentFilters.categories.length === 0 || 
                    currentFilters.categories.includes(activity.category);
                const matchesDifficulty = currentFilters.difficulties.length === 0 || 
                    currentFilters.difficulties.includes(activity.difficulty);
                const matchesRating = activity.rating >= currentFilters.minRating;
                const matchesSearch = currentFilters.search === '' || 
                    activity.name.toLowerCase().includes(currentFilters.search) ||
                    activity.category.toLowerCase().includes(currentFilters.search) ||
                    activity.instructor.toLowerCase().includes(currentFilters.search);

                return matchesCategory && matchesDifficulty && matchesRating && matchesSearch;
            });

            renderActivities();
        }

        function renderActivities() {
            const grid = document.getElementById('activitiesGrid');
            const noResults = document.getElementById('noResults');
            const resultCount = document.getElementById('resultCount');

            if (filteredActivities.length === 0) {
                grid.innerHTML = '';
                noResults.style.display = 'block';
                resultCount.textContent = '0';
                return;
            }

            noResults.style.display = 'none';
            resultCount.textContent = filteredActivities.length;

            grid.innerHTML = filteredActivities.map(activity => `
                <a href="Individual_Activity_Template?id=${activity.id}" class="activity-card">
                    <div class="activity-image">${activity.image}</div>
                    <div class="activity-content">
                        <div class="activity-name">${activity.name}</div>
                        <div class="activity-category">${activity.category}</div>
                        <div class="activity-location">
                            <span>üìç</span>
                            <span>${activity.location}</span>
                        </div>
                        <div class="activity-footer">
                            <div class="activity-rating">
                                <span class="rating-stars">‚òÖ</span>
                                <span>${activity.rating} (${activity.reviews})</span>
                            </div>
                            <div class="activity-price">$${activity.price}</div>
                        </div>
                    </div>
                </a>
            `).join('');
        }

        function resetFilters() {
            currentFilters = {
                categories: [],
                difficulties: [],
                minRating: 0,
                search: ""
            };
            document.querySelectorAll('.filter-chip').forEach(chip => {
                chip.classList.remove('selected');
            });
            document.getElementById('searchInput').value = '';
            applyFilters();
        }

        function toggleFilters() {
            const section = document.getElementById('filtersSection');
            section.style.display = section.style.display === 'none' ? 'block' : 'none';
        }

        // Initialize on page load
        document.addEventListener('DOMContentLoaded', () => {
            initializeFilters();
            renderActivities();
        });

        // Allow Enter key for search
        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') performSearch();
        });
    </script>
</body>
