    <main>
        <div class="filters-section" id="filtersSection">
            <div class="filters-title">Activity Type</div>
            <div class="filters-grid" id="categoryFilters">
                <!-- Populated by JS -->
            </div>

            <div class="filters-title" style="margin-top: 20px;">Difficulty Level</div>
            <div class="filters-grid" id="difficultyFilters">
                <!-- Populated by JS -->
            </div>

            <div class="filters-title" style="margin-top: 20px;">Rating</div>
            <div class="filters-grid">
                <div class="filter-chip" onclick="filterByRating(4)">‚≠ê 4.0+</div>
                <div class="filter-chip" onclick="filterByRating(4.5)">‚≠ê 4.5+</div>
                <div class="filter-chip" onclick="filterByRating(4.8)">‚≠ê 4.8+</div>
                <div class="filter-chip" onclick="resetFilters()">Clear All</div>
            </div>
        </div>

        <div class="results-header">
