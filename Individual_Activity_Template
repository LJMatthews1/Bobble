        function getActivityFromUrl() {
            const params = new URLSearchParams(window.location.search);
            return parseInt(params.get('id')) || null;
        }

        function renderActivity(activityId) {
            const activity = activities.find(a => a.id === activityId);
            const mainContent = document.getElementById('mainContent');

            if (!activity) {
                mainContent.innerHTML = `
                    <div class="no-activity">
                        <div class="no-activity-icon">üòï</div>
                        <h2>Activity Not Found</h2>
                        <p>The activity you're looking for doesn't exist.</p>
                        <a href="Search_Page" style="margin-top: 20px; display: inline-block; padding: 12px 24px; background: #000; color: #fff; text-decoration: none; border-radius: 6px;">
                            Back to Search
                        </a>
                    </div>
                `;
                return;
            }

            mainContent.innerHTML = `
                <div class="activity-hero">${activity.image}</div>

                <div class="activity-info">
                    <div class="activity-details">
                        <h1>${activity.name}</h1>
                        <div class="activity-meta">
                            <div class="meta-item">
                                <span class="meta-label">Category</span>
                                <span class="meta-value">${activity.category}</span>
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">Difficulty</span>
                                <span class="meta-value">${activity.difficulty}</span>
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">Duration</span>
                                <span class="meta-value">${activity.duration} min</span>
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">Location</span>
                                <span class="meta-value">${activity.location}</span>
                            </div>
                            <div class="meta-item rating">
                                <span class="rating-stars">‚òÖ</span>
                                <div>
                                    <span class="meta-value">${activity.rating}</span>
                                    <span class="rating-count">(${activity.reviews} reviews)</span>
                                </div>
                            </div>
                        </div>

                        <p class="activity-description">${activity.description}</p>

                        <div class="activity-details-list">
                            <div class="details-title">Schedule & Details</div>
                            <div class="detail-item">
                                <span class="detail-label">Schedule</span>
                                <span class="detail-value">${activity.schedule}</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Class Size</span>
                                <span class="detail-value">Max ${activity.capacity} participants</span>
                            </div>
                            <div class="detail-item">
                                <span class="detail-label">Difficulty Level</span>
                                <span class="detail-value">${activity.difficulty_level}</span>
                            </div>
                        </div>

                        <div class="activity-details-list">
                            <div class="details-title">Benefits</div>
                            ${activity.benefits.map(benefit => `
                                <div class="detail-item">
                                    <span style="display: flex; align-items: center; gap: 8px;">
                                        <span>‚úì</span>
                                        <span>${benefit}</span>
                                    </span>
                                </div>
                            `).join('')}
                        </div>
                    </div>

                    <div class="sidebar">
                        <div class="price-box">$${activity.price}</div>

                        <div class="instructor-info">
                            <div class="instructor-avatar">üë§</div>
                            <div class="instructor-details">
                                <h4>Instructor</h4>
                                <p>${activity.instructor}</p>
                                <p style="font-size: 11px; margin-top: 4px; color: #666;">${activity.instructorTitle}</p>
                            </div>
                        </div>

                        <button class="booking-button" onclick="bookActivity(${activity.id})">
                            Book Now
                        </button>
                        <button class="wishlist-button" onclick="addToWishlist(${activity.id})">
                            ‚ù§Ô∏è Add to Wishlist
                        </button>
                    </div>
                </div>

                <div class="reviews-section">
                    <div class="reviews-title">Student Reviews (${activity.reviews})</div>
                    ${activity.reviews_data.map(review => `
                        <div class="review-item">
                            <div class="review-header">
                                <div>
                                    <div class="review-author">${review.author}</div>
                                    <span class="review-rating">${'‚òÖ'.repeat(review.rating)}</span>
                                </div>
                                <div class="review-date">${review.date}</div>
                            </div>
                            <div class="review-text">${review.text}</div>
                        </div>
                    `).join('')}
                </div>
            `;
        }

        function bookActivity(activityId) {
            const activity = activities.find(a => a.id === activityId);
            alert(`üéâ Booked! You're registered for "${activity.name}"\n\nConfirmation will be sent to your email.`);
        }

        function addToWishlist(activityId) {
            const activity = activities.find(a => a.id === activityId);
            alert(`‚úÖ Added "${activity.name}" to your wishlist!`);
        }

        // Load activity on page load
        document.addEventListener('DOMContentLoaded', () => {
            const activityId = getActivityFromUrl();
            if (activityId) {
                renderActivity(activityId);
            } else {
                renderActivity(null);
            }
        });
    </script>
